    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "happy-dom": "^4.1.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vitest": "^0.12.9"
